    <script>
      function reveal(e){ // Closes and opens images when preview button is clicked
       const id = e.target.id;
       let imgId ='p' +id
        if(document.getElementById(imgId).style.display === ''){
          document.getElementById(imgId).style.display = "block";
        }
         
        else if(document.getElementById(imgId).style.display === "block"){
          document.getElementById(imgId).style.display = "";
        }

      }

      function showDoodle(e){
        let id ='doodle';
         if(document.getElementById(id).style.display === ''){
          document.getElementById('doodleBtn').innerText = 'Shrink';
          document.getElementById(id).style.display = "block"
         }
         else if(document.getElementById(id).style.display === "block"){
           document.getElementById(id).style.display = ""
           document.getElementById('doodleBtn').innerText = 'See More';
         }

      }

    </script>
